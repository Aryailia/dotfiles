let xdg_config = "$HOME/.config"
source "$xdg_config/shellrc"
source "$xdg_config/shell_profile"
#export timer = "$(date +%s)"

# Do not `lx` if directory change failed
fn c target; cd "$(namedpath "$target")" && lx .;  end

fn PROMPT
  let exitcode      = "$?" # this does not work
  let exitcode      = 'N/A'
  let timer         = '0'
  let backgroundpid = '0'
  
  "$HOME/.config/prompt.sh" "$exitcode" "$timer" "$backgroundpid"
end

