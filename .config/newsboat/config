# Reload on startup and default reloads every 60 minutes
#auto-reload yes
#reload-time 60

external-url-viewer "urlscan -dc -r 'linkhandler.sh -t {}'"

bind-key Y pb-download
bind-key U show-urls
bind-key u pageup
bind-key d pagedown
bind-key D delete-article
bind-key G end
bind-key g home
bind-key l open
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key j down
bind-key k up
bind-key h quit
bind-key x pb-delete
bind-key n next-unread
bind-key m toggle-article-read
bind-key N prev-unread


color listnormal cyan default
color listfocus blue white standout bold
# color listnormal_unread blue default
# color listfocus_unread yellow black bold
color info white magenta bold
# color article white default

# Must use prefix macros with single quote to use
browser "linkhandler.sh -t"
macro n next-feed article-list ; next-unread
macro p prev-feed article-list ; next-unread
macro v set browser "queue.sh youtube-dl --video"; open-in-browser ; set browser "linkhandler.sh -t"
macro a set browser "queue.sh youtube-dl --audio"; open-in-browser ; set browser "linkhandler.sh -t"
macro s set browser "queue.sh youtube-dl --video --subtitles"; open-in-browser ; set browser "linkhandler.sh -t"
macro d set browser "queue.sh direct"; open-in-browser ; set browser "linkhandler.sh -t"
macro c set browser "clipboard.sh --write <<<"; open-in-browser ; set browser "linkhandler.sh -t"
