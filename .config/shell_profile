export PATH=$PATH:$HOME/.config/scripts:$HOME/.config/aliases
export PATH=$PATH:/usr/local/go/bin

#export CDPATH=$HOME # first home if want 'cd' to go to home in bash see cd help
# This is a bash-specific for built-in `cd`. I emulate this behaviour for
# `namedpath` found in "~/.config/aliases". `lx` depends on `namedpath`.
export CDPATH=$HOME/.config/named_directories
export DOTENVIRONMENT=$HOME/.environment/

command -v urxvt >/dev/null 2>&1  && export TERMINAL_EXECUTE="urxvt -e"
command -v st >/dev/null 2>&1     && export TERMINAL_EXECUTE="st -e"

command -v vim >/dev/null 2>&1    && export EDITOR="vim"
command -v st >/dev/null 2>&1     && export TERMINAL="st-256color"
command -v st >/dev/null 2>&1     && export TERM="$TERMINAL"
command -v midori >/dev/null 2>&1 && export BROWSER="midori"
